<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/img_article_view"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:src="@drawable/img_bann_1"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/title_article_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apa Itu Depresi ?"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/description_article_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:text="Deskripsi Kontent"
        android:fontFamily="@font/poppins"
        android:lineSpacingExtra="5dp"
        android:textAlignment="@integer/default_circle_indicator_orientation"/>

    </LinearLayout>

</ScrollView>