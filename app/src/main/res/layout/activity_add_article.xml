<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArticleViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/add_img_article_view"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/add_image"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/add_title_article_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Artikel"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"
            android:padding="5dp"
            android:background="@color/colorBg"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:inputType="textMultiLine"/>
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="120dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBg"/>

        <EditText
            android:id="@+id/add_description_article_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:inputType="textMultiLine"
            android:background="@color/colorBg"
            android:padding="5dp"
            android:hint="Deskripsi Kontent"
            android:fontFamily="@font/poppins"/>

        <Button
            android:id="@+id/submit_article"
            android:theme="@style/MyMaterialTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|center"
            android:contentDescription="Simpan"
            android:text="Simpan"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:icon="@drawable/ic_save"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ic_bg_button"
            android:fontFamily="@font/poppins_bold"
            />


    </LinearLayout>



</ScrollView>